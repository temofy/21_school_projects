NAME = libftprintf.a

LIBFT = libft

SRC = ft_printf.c check_format.c save_conf.c output.c read_flags.c read_arg.c

OBJ=$(SRC:.c=.o)

all: $(NAME)

$(NAME):$(OBJ)
	@make -C $(LIBFT) re
	@cp libft/libft.a $(NAME)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)

clean:
	@rm -f $(OBJ)
	@make -C $(LIBFT) clean

fclean: clean
	@rm -f $(NAME)
	@make -C $(LIBFT) fclean

re: fclean all